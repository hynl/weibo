<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_mentions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_gray"/>
<include layout="@layout/status_mentions" android:id="@+id/status_mentions"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@color/bg_gray"
    android:gravity="center_vertical"
    android:orientation="horizontal" >


    <ImageView
        android:id="@+id/iv_rstatus_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/ll_re_card"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_rstatus_username"
            style="@style/TextViewSubhead"
            android:singleLine="true" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_rstatus_content"
            style="@style/TextViewCaption"
            android:lines="2" />
    </LinearLayout>

</LinearLayout>
    <include layout="@layout/include_status_controlbar"/>
</LinearLayout>